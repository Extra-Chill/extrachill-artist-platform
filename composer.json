{
  "name": "chubes4/extrachill-artist-platform",
  "description": "WordPress plugin providing comprehensive artist platform functionality for the Extra Chill community",
  "type": "wordpress-plugin",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Chris Huber",
      "email": "hello@chubes.net",
      "homepage": "https://chubes.net"
    }
  ],
  "require": {
    "php": ">=7.4",
    "endroid/qr-code": "^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "ExtraChillArtistPlatform\\": "inc/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "lint:php": "vendor/bin/phpcs --standard=WordPress inc/ extrachill-artist-platform.php",
    "lint:fix": "vendor/bin/phpcbf --standard=WordPress inc/ extrachill-artist-platform.php"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}